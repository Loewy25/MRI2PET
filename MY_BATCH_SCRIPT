#!/bin/bash
#SBATCH --job-name=test_fs
#SBATCH --mem=2G
#SBATCH -t 00:05:00
#SBATCH --partition=tier1_cpu
#SBATCH --account=shinjini_kundu
#SBATCH --output=test_fs.out
#SBATCH --error=test_fs.err

# minimal sanity test
module purge
module load freesurfer
source $FREESURFER_HOME/SetUpFreeSurfer.sh

echo "FREESURFER_HOME=$FREESURFER_HOME"
which mri_vol2vol || echo "❌ mri_vol2vol not found"
mri_vol2vol --version || echo "❌ cannot run mri_vol2vol"
which recon-all || echo "❌ recon-all not found"
recon-all --version || echo "❌ cannot run recon-all"

echo "✅ FreeSurfer basic test done."
